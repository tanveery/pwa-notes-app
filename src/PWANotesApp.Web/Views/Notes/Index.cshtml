@model IEnumerable<PWANotesApp.Web.ViewModels.IndexNoteViewModel>

@{
    ViewData["Title"] = "Notes";
}

<h1>Notes</h1>
<hr />
<p>
    <a asp-action="New" class="btn btn-light">New Note</a>
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Created Date
                </th>
                <th>
                    Last Updated Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                    </td>
                    <td>
                        @item.CreatedDate.ToShortDateString()
                    </td>
                    <td>
                       @item.LastUpdatedDate.ToShortDateString()
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        You do not have any notes.
    </div>
}
