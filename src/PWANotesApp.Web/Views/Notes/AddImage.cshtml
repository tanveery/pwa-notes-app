@model PWANotesApp.Web.ViewModels.NewImageNoteItemViewModel

@{
    ViewData["Title"] = "Add Image";
}

<h1>Add Image</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Position" />
            <input type="hidden" asp-for="RelativeItemId" />
            <input type="hidden" asp-for="NoteId" />
            <div class="form-group">
                <label asp-for="Image" class="control-label">Select the image that you want to upload::</label>
                <input asp-for="Image" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.NoteId" class="btn btn-dark">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
