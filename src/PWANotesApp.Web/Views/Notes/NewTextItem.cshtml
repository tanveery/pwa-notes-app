@model PWANotesApp.Web.ViewModels.NewTextNoteItemViewModel

@{
    ViewData["Title"] = "New Text Note Item";
}

<h1>New Text Note Item</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewTextItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NoteId" />
            <div class="form-group">
                <label asp-for="TextContent" class="control-label"></label>
                <textarea asp-for="TextContent" class="form-control" cols="8" rows="15"></textarea>
                <span asp-validation-for="TextContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.NoteId" class="btn btn-dark">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
